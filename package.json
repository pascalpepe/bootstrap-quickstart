{
  "name": "bootstrap-project-template",
  "version": "1.1.0",
  "private": true,
  "description": "Project template for a quick start with Bootstrap framework.",
  "keywords": [
    "web",
    "bootstrap",
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end"
  ],
  "homepage": "https://gitlab.com/pascalpepe/bootstrap-project-template#readme",
  "author": "Pascal Pepe",
  "scripts": {
    "css": "npm-run-all css-lint css-compile css-prefix css-minify",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/theme.scss dist/css/theme.css",
    "css-lint": "stylelint \"scss/**/*.scss\" --cache --cache-location .cache/.stylelintcache",
    "css-minify": "cleancss --level 1 --format breaksWith=lf --source-map --source-map-inline-sources --output dist/css/theme.min.css dist/css/theme.css",
    "css-prefix": "postcss --config postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "css-watch": "nodemon --watch scss/ --ext scss --exec \"npm run css\""
  },
  "style": "dist/css/theme.css",
  "sass": "scss/theme.scss",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/pascalpepe/bootstrap-project-template.git"
  },
  "bugs": {
    "url": "https://gitlab.com/pascalpepe/bootstrap-project-template/issues"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.4.7",
    "bootstrap": "^4.3.1",
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.1",
    "stylelint": "^9.10.1",
    "stylelint-config-twbs-bootstrap": "^0.3.0"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist/css/*.{css,map}",
    "scss/**/*.scss"
  ]
}
